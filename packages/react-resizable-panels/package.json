{
  "name": "react-resizable-panels",
  "version": "2.1.7",
  "description": "React components for resizable panel groups/layouts",
  "author": "Brian Vaughn <brian.david.vaughn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bvaughn/react-resizable-panels.git"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "development": {
        "browser": "./dist/index.browser.development.js",
        "node": "./dist/index.node.development.js",
        "default": "./dist/index.development.js"
      },
      "browser": "./dist/index.browser.js",
      "node": "./dist/index.node.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "imports": {
    "#is-development": {
      "development": "./src/env-conditions/development.ts",
      "default": "./src/env-conditions/production.ts"
    },
    "#is-browser": {
      "browser": "./src/env-conditions/browser.ts",
      "node": "./src/env-conditions/node.ts",
      "default": "./src/env-conditions/unknown.ts"
    }
  },
  "scripts": {
    "clear": "pnpm run clear:builds & pnpm run clear:node_modules",
    "clear:builds": "rm -rf ./packages/*/dist",
    "clear:node_modules": "rm -rf ./node_modules",
    "lint": "eslint",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "watch": "tsup --watch"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
    "@babel/plugin-proposal-optional-chaining": "7.21.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.17.5",
    "eslint": "9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "experimental",
    "react-dom": "experimental",
    "typescript-eslint": "^8.15.0"
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.0 || ^18.0.0 || ^19.0.0 || ^19.0.0-rc",
    "react-dom": "^16.14.0 || ^17.0.0 || ^18.0.0 || ^19.0.0 || ^19.0.0-rc"
  },
  "browserslist": [
    "Chrome 79"
  ]
}
